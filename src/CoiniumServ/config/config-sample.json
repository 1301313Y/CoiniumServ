{
	# website configuration
	"website": {
		"enabled": true,
		"bind": "127.0.0.1",
		"port": 91
	},
    
    # storage configuration.
	"storage": {
		"redis": {
			"enabled": true,
			"host": "10.0.0.13",
			"port": 6379,
            "password": "",
            "databaseId": 0
		}
	},

    # logging configuration
	"logging": {
		"root": "logs",
		"targets": [
			{
				"enabled": true,
				"type": "console",
				"level": "debug"
			},
			{
				"enabled": true,
				"type": "file",
				"filename": "server.log",
				"rolling": false,
				"level": "information"
			},
			{
				"enabled": true,
				"type": "file",
				"filename": "debug.log",
				"rolling": false,
				"level": "verbose"
			},
			{
				"enabled": true,
				"type": "packet",
				"filename": "packet.log",
				"rolling": false,
				"level": "verbose"
			}			
        ]	
	}
}