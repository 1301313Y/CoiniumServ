{
    # -------------------------------
    # Website Configuration
    # -------------------------------

    # enabled: set this true to enable frontend.

    # website configuration
	"website": {
		"enabled": true,
		"bind": "127.0.0.1",
		"port": 91
	},

    # -------------------------------
    # Logging Configuration
    # -------------------------------

    # logging configuration
	"logging": {
		"root": "logs",
		"targets": [
			{
				"enabled": true,
				"type": "console",
				"level": "debug"
			},
			{
				"enabled": true,
				"type": "file",
				"filename": "server.log",
				"rolling": false,
				"level": "information"
			},
			{
				"enabled": true,
				"type": "file",
				"filename": "debug.log",
				"rolling": false,
				"level": "verbose"
			},
			{
				"enabled": true,
				"type": "packet",
				"filename": "packet.log",
				"rolling": false,
				"level": "verbose"
			}			
        ]	
	}
}