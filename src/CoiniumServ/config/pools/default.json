{
    # default pool configuration
    # if a per-pool config file doesn't override a setting, default value from this file will be applied

	# coin daemon connection configuration
	"daemon": {
		"host": "127.0.0.1"
	},

    # payment processing configuration
	"payments": {
        "interval": 60,
		"minimum": 1
	},

	# stratum server configuration
	"stratum": {
        "bind": "0.0.0.0",
		"diff": 16,
        "vardiff": {
            "minDiff": 8,
            "maxDiff": 512,
            "targetTime": 15,
            "retargetTime": 90,
            "variancePercent": 30
        }
	},

	# vanilla server configuration - experimental!
	"vanilla": {
		"bind": "localhost"		
	},

    # banning support
    "banning": {
        "enabled": true,
        "duration": 600,
        "invalidPercent": 50,
        "checkThreshold": 500,
        "purgeInterval": 300
    },

    # per-pool storage configuration
	"storage": {
		"redis": {
			"host": "127.0.0.1",
			"port": 6379,
            "password": "",
            "databaseId": 0
		}
	},

	# mpos compat mode configuration - not implemented yet!
	"mpos": {
		"database": {
			"host": "127.0.0.1",
			"port": 3306,
			"user": "username",
			"password": "password"
		}
	}
}